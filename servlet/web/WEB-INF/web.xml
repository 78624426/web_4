<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>ctx</servlet-name>
        <servlet-class>day3.contxt.Serv1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ctx</servlet-name>
        <url-pattern>/day3/contxt/serv1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>serv2</servlet-name>
        <servlet-class>day3.contxt.Serv2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>serv2</servlet-name>
        <url-pattern>/day3/contxt/serv2</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>a1</param-name>
        <param-value>123</param-value>
    </context-param>
    <context-param>
        <param-name>phone</param-name>
        <param-value>1391353365</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>day3.login.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/day3/login/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>product</servlet-name>
        <servlet-class>day3.login.ShowProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>product</servlet-name>
        <url-pattern>/day3/login/product</url-pattern>
    </servlet-mapping>
</web-app>